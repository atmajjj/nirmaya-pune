    "categories_used": ["heavy_metal"],
    "interpretation": {
      "low": {"range": [0, 100], "description": "Low pollution"},
      "medium": {"range": [100, 200], "description": "Medium pollution"},
      "high": {"range": [200, null], "description": "High pollution"}
    }
  },
  "hei": {
    "name": "Heavy Metal Evaluation Index",
    "description": "Sum of concentration ratios for heavy metals",
    "categories_used": ["heavy_metal"],
    "interpretation": {
      "low": {"range": [0, 10], "description": "Low contamination"},
      "medium": {"range": [10, 20], "description": "Medium contamination"},
      "high": {"range": [20, null], "description": "High contamination"}
    }
  },
  "mi": {
    "name": "Metal Index",
    "description": "Average concentration ratio for all metals",
    "categories_used": ["heavy_metal", "metal"],
    "interpretation": {
      "acceptable": {"range": [0, 1], "description": "Acceptable"},
      "above_limit": {"range": [1, null], "description": "Above permissible limits"}
    }
  },
  "cdeg": {
    "name": "Degree of Contamination",
    "description": "Sum of contamination factors",
    "categories_used": ["heavy_metal"],
    "interpretation": {
      "low": {"range": [null, 1], "description": "Low contamination"},
      "medium": {"range": [1, 3], "description": "Medium contamination"},
      "high": {"range": [3, null], "description": "High contamination"}
    }
  },
  "pig": {
    "name": "Pollution Index of Groundwater",
    "description": "Composite index combining HPI and HEI",
    "categories_used": ["derived"],
    "interpretation": {
      "info": "Composite measure based on HPI and HEI"
    }
  },
  "wqi": {
    "name": "Water Quality Index",
    "description": "Comprehensive water quality assessment using all parameters",
    "categories_used": ["all"],
    "interpretation": {
      "excellent": {"range": [0, 50], "description": "Excellent"},
      "good": {"range": [50, 100], "description": "Good"},
      "poor": {"range": [100, 200], "description": "Poor"},
      "very_poor": {"range": [200, null], "description": "Very Poor"}
    }
  }
