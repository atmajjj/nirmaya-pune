{
  "name": "nirmaya-backend",
  "version": "1.0.0",
  "description": "Nirmaya Backend",
  "main": "build/src/server.js",
  "scripts": {
    "main": "npm run build && cross-env NODE_ENV=production node build/src/server.js",
    "start": "cross-env NODE_ENV=production node build/src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPatterns='unit' --forceExit --detectOpenHandles",
    "test:integration": "jest --testPathPatterns='integration' --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
    "docker:dev": "docker compose -f docker/compose.dev.yaml up --build",
    "docker:dev:down": "docker compose -f docker/compose.dev.yaml down",
    "docker:dev:clean": "docker compose -f docker/compose.dev.yaml down -v",
    "docker:test": "docker compose -f docker/compose.test.yaml up --build",
    "docker:test:up": "docker compose -f docker/compose.test.yaml up -d",
    "docker:test:down": "docker compose -f docker/compose.test.yaml down",
    "docker:test:clean": "docker compose -f docker/compose.test.yaml down -v",
    "docker:prod": "docker compose -f docker/compose.prod.yaml up --build -d",
    "docker:prod:down": "docker compose -f docker/compose.prod.yaml down",
    "docker:build": "docker build -f docker/Dockerfile -t nirmaya-backend --target production .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:migrate:dev": "cross-env NODE_ENV=development ts-node src/database/migrate.ts",
    "db:migrate:test": "cross-env NODE_ENV=test ts-node src/database/migrate.ts",
    "db:migrate:prod": "cross-env NODE_ENV=production ts-node src/database/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:push:dev": "cross-env NODE_ENV=development drizzle-kit push",
    "db:push:test": "cross-env NODE_ENV=test drizzle-kit push",
    "db:push:prod": "cross-env NODE_ENV=production drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:dev": "cross-env NODE_ENV=development drizzle-kit studio",
    "db:studio:test": "cross-env NODE_ENV=test drizzle-kit studio",
    "db:seed": "ts-node src/database/seed.ts",
    "db:drop": "drizzle-kit drop",
    "db:test": "ts-node src/database/health.ts",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "create-admin": "tsx scripts/create-admin.ts",
    "create-test-users": "tsx scripts/create-test-users.ts",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "express",
    "backend",
    "nirmaya",
    "typescript",
    "api"
  ],
  "author": "Harshal",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/groq": "^2.0.32",
    "@aws-sdk/client-s3": "^3.856.0",
    "@aws-sdk/s3-request-presigner": "^3.939.0",
    "@huggingface/inference": "^4.13.4",
    "@pinecone-database/pinecone": "^6.1.3",
    "@types/handlebars": "^4.0.40",
    "@types/papaparse": "^5.5.1",
    "@types/xlsx": "^0.0.35",
    "ai": "^5.0.104",
    "bcrypt": "^6.0.0",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.7",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.3",
    "papaparse": "^5.5.3",
    "pdfjs-dist": "^5.4.394",
    "pg": "^8.16.3",
    "puppeteer": "^24.32.0",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.8.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@swc/core": "^1.10.0",
    "@swc/jest": "^0.2.36",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.35.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "glob": "^10.4.5",
    "test-exclude": "^7.0.1",
    "esbuild": "^0.25.0"
  }
}
