{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    /* Type Checking - Production-ready strict settings for Express/Node */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,  // Must be false for Express middleware compatibility
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,  // Express handlers often don't use all params
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Emit */
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": false,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    
    /* Interop Constraints */
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Skip Checking - Essential for node_modules compatibility */
    "skipLibCheck": true,
    
    /* Path Mapping */
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "**/*.test.ts", "**/*.spec.ts", "coverage"]
}
